<Window x:Class="Software_Engineering_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Software_Engineering_Project"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="379*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="PwdBox" Margin="222.238,301,255,95" TextWrapping="Wrap" Text="Password" Grid.Column="1"/>
        <TextBox x:Name="usrBox" Margin="222.238,259,255,137" TextWrapping="Wrap" Text="E-Mail" TextChanged="TextBox_TextChanged" Grid.Column="1"/>
        <Button x:Name="LoginBtn" Content="Button" Grid.Column="1" HorizontalAlignment="Left" Margin="222,368,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="CreateAcctBtn" Content="Button" Grid.Column="1" HorizontalAlignment="Left" Margin="428,368,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Window>
