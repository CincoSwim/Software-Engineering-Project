<Window x:Class="Software_Engineering_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Software_Engineering_Project"
        mc:Ignorable="d"
        Title="FlightAssist - Login" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="379*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="PwdBox" Margin="222,273,255,123" TextWrapping="Wrap" Text="Password" Grid.Column="1"/>
        <TextBox x:Name="usrBox" Margin="222,230,255,166" TextWrapping="Wrap" Text="E-Mail" TextChanged="TextBox_TextChanged" Grid.Column="1"/>
        <Button x:Name="LoginBtn" Content="Login" Grid.Column="1" HorizontalAlignment="Left" Margin="310,314,0,0" VerticalAlignment="Top" Width="97" Click="LoginBtn_Click"/>
        <Button x:Name="CreateAcctBtn" Content="Create Account" Grid.Column="1" HorizontalAlignment="Left" Margin="310,349,0,0" VerticalAlignment="Top" Width="97" Click="CreateAcctBtn_Click"/>
        <Image x:Name="TEMPLOGO" Margin="163,21,218,210" Source="poster,504x498,f8f8f8-pad,600x600,f8f8f8.jpg" Stretch="Fill" Grid.Column="1"/>
    </Grid>
</Window>
