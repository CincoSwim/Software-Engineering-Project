<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Software_Engineering_Project"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" x:Class="Software_Engineering_Project.MainWindow"
        mc:Ignorable="d"
        Title="FlightAssist - Login" Height="469.853" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
      
        <Button x:Name="MarketManagerLoginButton" Content="Market Manager" Grid.Column="1" HorizontalAlignment="Left" Margin="326,380,0,0" VerticalAlignment="Top" Width="97" Click="MarketManager_Click" Height="20"/>
        <Button x:Name="LoadEngineerLoginButton" Content="Load Engineer" Grid.Column="1" HorizontalAlignment="Left" Margin="326,410,0,0" VerticalAlignment="Top" Width="97" Click="LoadEngineer_Click" Height="20"/>
        
        <Button x:Name="LoginBtn" Content="Login" Grid.Column="1" HorizontalAlignment="Left" Margin="326,314,0,0" VerticalAlignment="Top" Width="97" Click="LoginBtn_Click" Height="20"/>
        <Button x:Name="CreateAcctBtn" Content="Create Account" Grid.Column="1" HorizontalAlignment="Left" Margin="326,352,0,0" VerticalAlignment="Top" Width="97" Click="CreateAcctBtn_Click" Height="20"/>
        <Image x:Name="TEMPLOGO" Margin="183,21,198,210" Source="poster,504x498,f8f8f8-pad,600x600,f8f8f8.jpg" Stretch="Fill" Grid.Column="1"/>
        <xctk:WatermarkTextBox x:Name="usrBox" Watermark ="UserID" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="238,234,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="304"/>
        <xctk:WatermarkTextBox x:Name="pwdBox" Watermark ="Password" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="238,265,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="304"/>
    </Grid>
</Window>
